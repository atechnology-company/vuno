<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Fragment>
        <ComponentGroup Id="VunoFileTypes">
            <!-- Text files -->
            <Component Id="TextFileAssociation" Guid="*" Directory="INSTALLDIR">
                <RegistryValue Root="HKLM" Key="SOFTWARE\Classes\.txt" Value="vuno.text" Type="string" KeyPath="yes"/>
                <RegistryValue Root="HKLM" Key="SOFTWARE\Classes\vuno.text" Value="Text Document" Type="string"/>
                <RegistryValue Root="HKLM" Key="SOFTWARE\Classes\vuno.text\DefaultIcon" Value="[INSTALLDIR]vuno.exe,0" Type="string"/>
                <RegistryValue Root="HKLM" Key="SOFTWARE\Classes\vuno.text\shell\open\command" Value="&quot;[INSTALLDIR]vuno.exe&quot; &quot;%1&quot;" Type="string"/>
            </Component>

